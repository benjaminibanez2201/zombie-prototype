# Normalize text and handle Unity assets cleanly
* text=auto

# Unity YAML/text files should use LF line endings
*.meta         text eol=lf
*.unity        text eol=lf
*.prefab       text eol=lf
*.mat          text eol=lf
*.anim         text eol=lf
*.asset        text eol=lf
*.asmdef       text eol=lf
*.inputactions text eol=lf
*.shader       text eol=lf
*.shadergraph  text eol=lf
*.json         text eol=lf
*.txt          text eol=lf
*.scenetemplate text eol=lf

# Code files: normalize as text
*.cs text=auto
*.yml text=auto
*.yaml text=auto
*.md text=auto

# Binary assets: never modify line endings
*.png binary
*.jpg binary
*.jpeg binary
*.psd binary
*.tga binary
*.fbx binary
*.wav binary
*.mp3 binary
*.ogg binary
*.ttf binary
*.dll binary
*.exe binary
